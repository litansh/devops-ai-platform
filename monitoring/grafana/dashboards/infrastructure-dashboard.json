{
  "dashboard": {
    "id": null,
    "title": "DevOps AI Platform - Infrastructure Dashboard",
    "tags": ["devops-ai-platform", "infrastructure"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "EKS Cluster Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"kubernetes-pods\"}",
            "legendFormat": "Pods Running"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Node Status",
        "type": "stat",
        "targets": [
          {
            "expr": "kube_node_status_condition{condition=\"Ready\"}",
            "legendFormat": "Ready Nodes"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Pod Restarts",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(kube_pod_container_status_restarts_total[1h])",
            "legendFormat": "Restarts (1h)"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Resource Usage",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes) / sum(container_spec_memory_limit_bytes) * 100",
            "legendFormat": "Memory Usage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "RDS PostgreSQL Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "aws_rds_connections",
            "legendFormat": "Database Connections"
          },
          {
            "expr": "aws_rds_cpu_utilization",
            "legendFormat": "CPU Utilization %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "RDS Storage",
        "type": "graph",
        "targets": [
          {
            "expr": "aws_rds_free_storage_space / 1024 / 1024 / 1024",
            "legendFormat": "Free Storage (GB)"
          },
          {
            "expr": "aws_rds_allocated_storage",
            "legendFormat": "Allocated Storage (GB)"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Redis Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "redis_connected_clients",
            "legendFormat": "Connected Clients"
          },
          {
            "expr": "redis_memory_used_bytes / 1024 / 1024",
            "legendFormat": "Memory Used (MB)"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Redis Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(redis_commands_processed_total[5m])",
            "legendFormat": "Commands/sec"
          },
          {
            "expr": "redis_keyspace_hits / (redis_keyspace_hits + redis_keyspace_misses) * 100",
            "legendFormat": "Hit Rate %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 9,
        "title": "MongoDB Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "mongodb_connections",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "mongodb_operations_total",
            "legendFormat": "Total Operations"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 10,
        "title": "Network Traffic",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total[5m]) / 1024 / 1024",
            "legendFormat": "Network In (MB/s)"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total[5m]) / 1024 / 1024",
            "legendFormat": "Network Out (MB/s)"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 11,
        "title": "AWS Costs",
        "type": "graph",
        "targets": [
          {
            "expr": "aws_billing_estimated_charges_usd",
            "legendFormat": "Estimated Charges ($)"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 12,
        "title": "Load Balancer Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "aws_alb_request_count",
            "legendFormat": "Request Count"
          },
          {
            "expr": "aws_alb_target_response_time",
            "legendFormat": "Response Time"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32}
      },
      {
        "id": 13,
        "title": "S3 Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "aws_s3_bucket_size_bytes / 1024 / 1024 / 1024",
            "legendFormat": "Bucket Size (GB)"
          },
          {
            "expr": "aws_s3_number_of_objects",
            "legendFormat": "Number of Objects"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40}
      },
      {
        "id": 14,
        "title": "CloudWatch Alarms",
        "type": "stat",
        "targets": [
          {
            "expr": "aws_cloudwatch_alarm_state_value",
            "legendFormat": "Alarm State"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "red", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
