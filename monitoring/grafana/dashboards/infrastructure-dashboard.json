{
  "id": null,
  "title": "DevOps AI Platform - Infrastructure Dashboard",
  "tags": ["devops-ai-platform", "infrastructure"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "System CPU Usage",
      "type": "stat",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU Usage %"
        }
      ],
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "System Memory Usage",
      "type": "stat",
      "targets": [
        {
          "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
          "legendFormat": "Memory Usage %"
        }
      ],
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 80},
              {"color": "red", "value": 95}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Disk Usage",
      "type": "stat",
      "targets": [
        {
          "expr": "(node_filesystem_size_bytes - node_filesystem_free_bytes) / node_filesystem_size_bytes * 100",
          "legendFormat": "Disk Usage %"
        }
      ],
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 80},
              {"color": "red", "value": 90}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Network Traffic",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total[5m])",
          "legendFormat": "Network Receive"
        }
      ],
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 5,
      "title": "PostgreSQL Connections",
      "type": "timeseries",
      "targets": [
        {
          "expr": "pg_stat_database_numbackends",
          "legendFormat": "{{datname}}"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 6,
      "title": "PostgreSQL Query Performance",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(pg_stat_database_tup_fetched[5m])",
          "legendFormat": "Tuples Fetched"
        },
        {
          "expr": "rate(pg_stat_database_tup_inserted[5m])",
          "legendFormat": "Tuples Inserted"
        },
        {
          "expr": "rate(pg_stat_database_tup_updated[5m])",
          "legendFormat": "Tuples Updated"
        },
        {
          "expr": "rate(pg_stat_database_tup_deleted[5m])",
          "legendFormat": "Tuples Deleted"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Redis Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "redis_memory_used_bytes",
          "legendFormat": "Memory Used"
        },
        {
          "expr": "redis_memory_max_bytes",
          "legendFormat": "Memory Max"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Redis Operations",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(redis_commands_processed_total[5m])",
          "legendFormat": "Commands/sec"
        },
        {
          "expr": "rate(redis_keyspace_hits_total[5m])",
          "legendFormat": "Cache Hits"
        },
        {
          "expr": "rate(redis_keyspace_misses_total[5m])",
          "legendFormat": "Cache Misses"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 9,
      "title": "MongoDB Operations",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(mongodb_mongod_op_latencies_latency_total[5m])",
          "legendFormat": "Operation Latency"
        },
        {
          "expr": "mongodb_mongod_connections",
          "legendFormat": "Active Connections"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 10,
      "title": "Application Response Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_request_duration_seconds_sum[5m]) / rate(http_request_duration_seconds_count[5m])",
          "legendFormat": "Avg Response Time"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 11,
      "title": "Application Requests/sec",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "Requests/sec"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 12,
      "title": "Application Error Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
          "legendFormat": "Error Rate %"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 5},
              {"color": "red", "value": 10}
            ]
          }
        }
      }
    }
  ]
}
