# Platform Configuration
PLATFORM_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
AWS_DEFAULT_REGION=us-west-2

# GCP Configuration (for future use)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project-id

# Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_SIGNING_SECRET=your_slack_signing_secret

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/devops_ai_platform
REDIS_URL=redis://localhost:6379/0
MONGODB_URL=mongodb://localhost:27017/devops_ai_platform

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
MODEL_PROVIDER=openai  # or anthropic

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key
ELASTICSEARCH_URL=http://localhost:9200

# Kubernetes Configuration
KUBECONFIG=~/.kube/config
K8S_NAMESPACE=devops-ai-platform

# GitHub Configuration
GITHUB_TOKEN=your_github_token
GITHUB_REPO=your-org/devops-ai-platform
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Security Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Cost Management
AWS_COST_ALERT_THRESHOLD=100
GCP_COST_ALERT_THRESHOLD=100
BUDGET_ALERT_EMAIL=admin@yourcompany.com

# Agent Configuration
AGENT_EXECUTION_INTERVAL=300  # 5 minutes
AGENT_TIMEOUT=60  # 60 seconds
MAX_CONCURRENT_AGENTS=10

# Notification Configuration
ALERT_EMAIL=alerts@yourcompany.com
SLACK_CHANNEL=#devops-alerts
TELEGRAM_CHAT_ID=your_chat_id

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=30
CACHE_TTL=300

# Development Configuration
ENABLE_MOCK_MODE=false
ENABLE_DEBUG_MODE=true
ENABLE_PROFILING=false
